{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "allowJs": false,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es6", "dom", "es2016", "es2017"],
    "baseUrl": "src",
    "paths": {
      "~/*": ["*"]
    },
    "typeRoots": ["types", "node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "build", "dist", "types"]
}
