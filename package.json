{
    "name": "@jahia/moonstone",
    "version": "0.0.0",
    "private": true,
    "dependencies": {
        "classnames": "^2.2.6",
        "prop-types": "^15.7.2"
    },
    "peerDependencies": {
        "react": "^16.9.0"
    },
    "scripts": {
        "start": "start-storybook -p 6006",
        "test": "jest --ci --runInBand --coverage",
        "tdd": "jest --watch",
        "lint:js": "eslint --ext js,jsx,json .",
        "lint:scss": "stylelint './src/**/*.scss'",
        "lint:js:fix": "yarn lint:js --fix .",
        "lint:scss:fix": "yarn lint:scss --fix",
        "lint:fix": "yarn lint:js && yarn lint:scss",
        "build": "yarn build:storybook && yarn build:lib",
        "build:lib": "webpack --mode production",
        "build:lib:dev": "webpack --mode development",
        "build:storybook": "build-storybook",
        "deploy": "rsync -r ./storybook-static/ jahia@design.int.jahia.com:/var/www/vhosts/contenteditor.jahia.design/html/moonstone/",
        "auto": "auto",
        "version": "npm version `auto version` -m 'Bump version to: %s [skip ci]'",
        "publish": "npm publish && git push --follow-tags --set-upstream origin $branch",
        "release": "auto changelog && npm run version && npm run publish && auto release"
    },
    "main": "dist/main.js",
    "module": "dist/main.js",
    "repository": "https://github.com/Jahia/moonstone.git",
    "sideEffects": false,
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "yarn test"
        }
    },
    "lint-staged": {
        "src/**/*.{js,jsx,scss}": [
            "yarn lint:fix",
            "git add"
        ]
    },
    "devDependencies": {
        "@babel/core": "^7.5.5",
        "@babel/preset-env": "^7.6.2",
        "@babel/preset-react": "^7.0.0",
        "@jahia/eslint-config": "^1.0.0-beta.20190819140611",
        "@storybook/addon-actions": "^5.1.11",
        "@storybook/addon-docs": "^5.2.3",
        "@storybook/addon-knobs": "^5.1.11",
        "@storybook/addon-links": "^5.1.11",
        "@storybook/addon-notes": "^5.1.11",
        "@storybook/addon-storysource": "^5.2.3",
        "@storybook/addons": "^5.2.3",
        "@storybook/react": "^5.2.3",
        "auto": "^7.8.0",
        "babel-eslint": "^10.0.3",
        "babel-jest": "^24.9.0",
        "babel-loader": "^8.0.6",
        "component-test-utils-react": "^1.0.0-alpha.7",
        "css-loader": "^3.2.0",
        "eslint": "5.16.0",
        "eslint-plugin-jest": "^22.16.0",
        "eslint-plugin-json": "^1.4.0",
        "eslint-plugin-react": "^7.14.3",
        "file-loader": "^4.2.0",
        "husky": "^3.0.5",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^24.9.0",
        "lint-staged": "^9.4.1",
        "mini-css-extract-plugin": "^0.8.0",
        "node-sass": "^4.12.0",
        "optimize-css-assets-webpack-plugin": "^5.0.3",
        "react": "^16.9.0",
        "react-test-renderer": "^16.9.0",
        "sass-loader": "^8.0.0",
        "storybook-addon-versions": "^0.4.3",
        "storybook-readme": "^5.0.8",
        "style-loader": "^1.0.0",
        "stylelint": "^10.1.0",
        "stylelint-config-standard": "^18.3.0",
        "stylelint-order": "^3.1.0",
        "stylelint-scss": "^3.10.0",
        "svg-sprite-loader": "^4.1.6",
        "svgo-loader": "^2.2.1",
        "terser-webpack-plugin": "^2.1.0",
        "webpack": "^4.41.0",
        "webpack-cli": "^3.3.9",
        "webpack-node-externals": "^1.7.2"
    }
}
